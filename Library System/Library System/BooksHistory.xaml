<Window x:Class="Library_System.BooksHistory"
        ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_System"
        mc:Ignorable="d"
        Title="BooksHistory" Height="800" Width="1300">
    <Grid>
        <DataGrid x:Name="datagrid_BooksHistory" HorizontalAlignment="Left" Height="440" Margin="10,45,0,0" VerticalAlignment="Top" Width="1274" Background="White" IsReadOnly="True" SelectionMode="Single"/>
        <TextBox x:Name="textbox_Search" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <Button x:Name="button_Search" Content="Search" HorizontalAlignment="Left" Margin="225,10,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="button_Search_Click" IsDefault="True" Background="White"/>
        <Button x:Name="button_ReturnToMainMenu" Content="Return To Main Menu" HorizontalAlignment="Left" Margin="1105,730,0,0" VerticalAlignment="Top" Width="179" Height="31" Click="button_ReturnToMainMenu_Click" Background="White"/>
        <Grid.Background>
            <ImageBrush ImageSource="books_shelf_graffiti_125860_1920x1080.jpg"/>
        </Grid.Background>
    </Grid>
    
</Window>
