<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forumists</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @if(System.IO.Path.GetFileNameWithoutExtension(ViewContext.View.Path).ToString() == "Details")
    {
        
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a  class="navbar-brand" style="font-family:'Brush Script MT'" asp-area="" asp-controller="Home" asp-action="Index">Forumists</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                      <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Home" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if(User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="User" asp-controller="UserPosts" asp-action="Index">My Posts</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link" asp-area="User" asp-controller="UserAllPosts" asp-action="Index">All Posts</a>
                            </li>
                       
                            if (User.IsInRole("Admin"))
                            { 
                                <li class="nav-item">  
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminRole" asp-action="Index">Role Manager</a>  
                            </li>
                                 <li class="nav-item">  
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminUserRoles" asp-action="Index">Users Roles</a>  
                                </li>  
                                <li class="nav-item">  
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminManagePosts" asp-action="Index">Manage All Posts</a>  
                                </li> 
                            }
                           
                        }
                        
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="mt-3 container text-center">
            &copy; 2022 - Forumists - <a asp-area="Home" asp-controller="Home" asp-action="Index">Home Page</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
